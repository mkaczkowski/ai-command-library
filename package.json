{
  "name": "@mkaczkowski/ai-command-library",
  "version": "0.4.2",
  "description": "Reusable AI agent commands packaged for Claude, Cursor, Codex and similar tooling.",
  "type": "module",
  "bin": {
    "link-ai-commands": "bin/link-ai-commands.js"
  },
  "files": [
    "library",
    "providers",
    "scripts",
    "bin",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky install",
    "release": "npm run lint && npm run format:check",
    "link-commands": "node ./bin/link-ai-commands.js"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkaczkowski/ai-command-library.git"
  },
  "author": "Marek Kaczkowski",
  "homepage": "https://github.com/mkaczkowski/ai-command-library#readme",
  "bugs": {
    "url": "https://github.com/mkaczkowski/ai-command-library/issues"
  },
  "keywords": [
    "ai",
    "commands",
    "claude",
    "cursor",
    "codex",
    "github"
  ],
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
